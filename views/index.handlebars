<div class="row">
  <div class="col 12">
    <div class="row" id="burger-title">
        <div class="col">
          <h1>Burgers!</h1>
        </div>
      </div>
      <div class="row" id="devoured-undevoured">
        <div class="col-6">
          <h2>Undevoured burgers!</h2>
            <ul>
              {{#each burgers}}
                {{#unless eaten}}
                  {{> burgers/burger-block sleep=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
        <div class="col-6">
          <h2>Devoured burgers!</h2>
              <ul>
                {{#each burgers}}
                  {{#if eaten}}
                    {{> burgers/burger-block sleep=false}}
                  {{/if}}
                {{/each}}
              </ul>
        </div>
      </div>
      <div class="row" id="add-burger">
        <div class="col-12">
            <h2>Add a burger</h2>
            <form class="create-form">

              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>

              <div class="form-group">
                <label for="eaten">Devoured?</label><br>
                <input type="radio" name="eaten" value="1" checked> Devoured!<br>
                <input type="radio" name="eaten" value="0"> Undevoured
              </div>

              <button type="submit">Add burger</button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
  
    

    

    

    
